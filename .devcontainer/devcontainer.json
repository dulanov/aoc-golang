{
    "name": "Golang (GitHub Codespaces)",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "VARIANT": "1.18-bullseye"
        }
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "features": {
        "git": "os-provided",
        "git-lfs": "latest",
        "github-cli": "latest"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go"
            ],
            "settings": {
                "git.autofetch": "all",
                "go.toolsManagement.checkForUpdates": "local",
                "go.useLanguageServer": true,
                "go.gopath": "/go"
            }
        }
    },
    "postCreateCommand": "git lfs pull",
    "remoteUser": "vscode"
}